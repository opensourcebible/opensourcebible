{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"],
      "stores/*": ["src/stores/*"]
    }
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/global/enums.d.ts",
    "./src/global/types.d.ts",
    "./src/global/interfaces.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src-pwa/*.d.ts",
    "src/global/enums.d.ts",
    "src/global/interfaces.d.ts",
    "src/global/types.d.ts",
  ]
}
